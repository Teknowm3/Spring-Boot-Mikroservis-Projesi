{
  "uid": "microservices-overview",
  "title": "Microservices Overview (Spring Boot)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",
  "tags": ["spring", "micrometer", "prometheus"],
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "job",
        "label": "Service",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "query": { "query": "label_values(up, job)", "refId": "StandardVariableQuery" },
        "refresh": 1,
        "sort": 1,
        "current": { "text": "api-gateway", "value": "api-gateway" }
      },
      {
        "type": "query",
        "name": "instanceName",
        "label": "Instance",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "query": { "query": "label_values(up{job=\"$job\"}, instanceName)", "refId": "StandardVariableQuery" },
        "refresh": 1,
        "sort": 1
      },
      {
        "type": "query",
        "name": "service",
        "label": "Logs (compose_service)",
        "datasource": { "type": "loki", "uid": "Loki" },
        "query": { "query": "label_values({job=\"docker\"}, compose_service)", "refId": "StandardVariableQuery" },
        "refresh": 1,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "UP",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "expr": "up{job=\"$job\",instanceName=\"$instanceName\"}", "legendFormat": "" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "RPS (1m)",
      "gridPos": { "x": 4, "y": 0, "w": 5, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({__name__=~\"http_server_requests_seconds_count|spring_cloud_gateway_requests_seconds_count\",job=\"$job\",instanceName=\"$instanceName\"}[1m]))",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": { "defaults": { "decimals": 2 }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "p95 latency (ms)",
      "gridPos": { "x": 9, "y": 0, "w": 5, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate({__name__=~\"http_server_requests_seconds_bucket|spring_cloud_gateway_requests_seconds_bucket\",job=\"$job\",instanceName=\"$instanceName\"}[5m])) by (le)) * 1000",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": { "defaults": { "unit": "ms", "decimals": 0 }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "CPU (%)",
      "gridPos": { "x": 14, "y": 0, "w": 5, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "process_cpu_usage{job=\"$job\",instanceName=\"$instanceName\"} * 100",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 1 }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "Memory used (MB)",
      "gridPos": { "x": 19, "y": 0, "w": 5, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(jvm_memory_used_bytes{job=\"$job\",instanceName=\"$instanceName\"}) / 1024 / 1024",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": { "defaults": { "unit": "megabytes", "decimals": 0 }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "HTTP RPS (1m)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 7 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({__name__=~\"http_server_requests_seconds_count|spring_cloud_gateway_requests_seconds_count\",job=\"$job\",instanceName=\"$instanceName\"}[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP p95 latency (ms)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 7 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate({__name__=~\"http_server_requests_seconds_bucket|spring_cloud_gateway_requests_seconds_bucket\",job=\"$job\",instanceName=\"$instanceName\"}[5m])) by (le)) * 1000",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "CPU usage (%)",
      "gridPos": { "x": 0, "y": 11, "w": 12, "h": 7 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "process_cpu_usage{job=\"$job\",instanceName=\"$instanceName\"} * 100",
          "legendFormat": "cpu%"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "JVM heap used (MB)",
      "gridPos": { "x": 12, "y": 11, "w": 12, "h": 7 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(jvm_memory_used_bytes{job=\"$job\",instanceName=\"$instanceName\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "heap used"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "megabytes" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "JVM memory used total (MB)",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 7 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(jvm_memory_used_bytes{job=\"$job\",instanceName=\"$instanceName\"}) / 1024 / 1024",
          "legendFormat": "used"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "megabytes" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests / sec by uri (top 10)",
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 7 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum(rate(http_server_requests_seconds_count{job=\"$job\",instanceName=\"$instanceName\"}[1m])) by (uri))",
          "legendFormat": "{{uri}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Logs / sec",
      "gridPos": { "x": 0, "y": 25, "w": 12, "h": 7 },
      "datasource": { "type": "loki", "uid": "Loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({job=\"docker\",compose_service=\"$service\"}[1m]))",
          "legendFormat": "logs/s"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Logs (tail)",
      "gridPos": { "x": 12, "y": 25, "w": 12, "h": 14 },
      "datasource": { "type": "loki", "uid": "Loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"docker\",compose_service=\"$service\"}"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": false
      }
    }
  ]
}
